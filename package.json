{
  "name": "flush-requires-boilerplate-webpack",
  "description": "A boilerplate showing how to achieve Universal Code-Splitting and Universal HMR with react-universal-component, webpack-flush-chunks and extract-css-chunks-webpack-plugin",
  "version": "1.0.0",
  "main": "server/index.js",
  "author": "James Gillmore <james@faceyspacey.com>",
  "license": "MIT",
  "scripts": {
    "start": "npm run clean && NODE_ENV=development babel-watch server/index.js",
    "start:prod": "npm run build && NODE_ENV=production babel-watch server/index.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "rimraf buildClient && NODE_ENV=production webpack --progress -p --config webpack/client.prod.js",
    "build:server": "rimraf buildServer && NODE_ENV=production webpack --progress -p --config webpack/server.prod.js",
    "clean": "rimraf buildClient buildServer",
    "precommit": "lint-staged --verbose",
    "cm": "git-cz",
    "lint": "eslint --fix src server webpack",
    "format": "prettier --single-quote --semi=false --write '{src,server,webpack}/**/*.js' && npm run lint"
  },
  "dependencies": {
    "express": "^4.15.2",
    "inversify": "^4.1.1",
    "react": "^15.4.2",
    "react-async-component": "^1.0.0-beta.3",
    "react-dom": "^15.4.2",
    "react-router-dom": "^4.1.1",
    "react-rx-connect": "^1.0.6",
    "react-universal-component": "^1.2.1",
    "redux": "^3.7.1",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.4.1",
    "webpack-flush-chunks": "^1.0.4"
  },
  "devDependencies": {
    "@types/babel-types": "^6.7.16",
    "@types/core-js": "^0.9.42",
    "@types/express": "^4.0.36",
    "@types/node": "^8.0.5",
    "@types/react": "^15.0.33",
    "@types/reflect-metadata": "0.0.5",
    "@types/react-dom": "^15.5.1",
    "@types/webpack-env": "^1.13.0",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^6.4.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-watch": "^2.0.6",
    "commitizen": "^2.9.6",
    "css-loader": "^0.28.4",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "extract-css-chunks-webpack-plugin": "^1.0.12",
    "husky": "^0.13.2",
    "less": "^2.7.2",
    "less-loader": "^4.0.4",
    "lint-staged": "^3.4.0",
    "prettier": "^1.2.2",
    "react-hot-loader": "next",
    "rimraf": "^2.6.1",
    "stats-webpack-plugin": "^0.5.0",
    "travis-github-status": "^1.4.0",
    "ts-loader": "^2.2.1",
    "typescript": "2.4.1",
    "webpack": "^2.6.1",
    "webpack-dev-middleware-multi-compiler": "^1.0.0",
    "webpack-hot-middleware": "^2.17.1",
    "webpack-hot-server-middleware": "^0.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --semi=false --write",
      "eslint --fix",
      "git add"
    ]
  }
}
